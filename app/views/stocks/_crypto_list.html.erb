<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Current Price</th>
      <% if @user.id ==  current_user.id %>
      <th>Actions</th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <% @user_cryptos.each do |user_crypto| %>
      <tr>
        <td><%= user_crypto.bitcurrency %></td>
        <td><%= user_crypto.last %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to 'Delete Stock', user_crypto_path(user_crypto), method: :delete,
        data: { confirm: 'are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
